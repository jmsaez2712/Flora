<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/main_fragment">

    <fragment
        android:id="@+id/main_fragment"
        android:name="dev.jmsaez.florafragments.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
        <action
            android:id="@+id/action_FirstFragment_to_addFloraFragment"
            app:destination="@id/addFloraFragment" />
        <action
            android:id="@+id/action_FirstFragment_to_addImageFragment"
            app:destination="@id/addImageFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="dev.jmsaez.florafragments.FloraDetailFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/main_fragment" />
    </fragment>
    <fragment
        android:id="@+id/addFloraFragment"
        android:name="dev.jmsaez.florafragments.AddFloraFragment"
        android:label="fragment_add_flora"
        tools:layout="@layout/fragment_add_flora" />
    <fragment
        android:id="@+id/addImageFragment"
        android:name="dev.jmsaez.florafragments.AddImageFragment"
        android:label="fragment_add_image"
        tools:layout="@layout/fragment_add_image" />
</navigation>